{% extends 'base.html.twig' %}

{% block title %}Enseignant Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Enseignant</h1>

        <div class="text-right mb-3">
            <a href="{{ path('app_enseignant_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered dataTable">
                <thead class="thead-light">
                    <tr>
                        <th>Matricule</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for enseignant in enseignants %}
                    <tr>
                        <td>{{ enseignant.matricule }}</td>
                        <td>{{ enseignant.nom }}</td>
                        <td>{{ enseignant.prenom }}</td>
                        <td>
                            <!-- Buttons for Actions -->
                            <a href="{{ path('app_enseignant_show', {'matricule': enseignant.matricule}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_enseignant_edit', {'matricule': enseignant.matricule}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('app__soutenances_enseignant_show', {'matricule': enseignant.matricule}) }}" class="btn btn-success btn-sm">
                                <i class="fas fa-edit"></i> See soutenances
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
