{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Détails de l'Etudiant</h1>

        <!-- Table to show student details -->
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th scope="row">NCE</th>
                    <td>{{ etudiant.nce }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ etudiant.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Prénom</th>
                    <td>{{ etudiant.prenom }}</td>
                </tr>
            </tbody>
        </table>

        <!-- Action buttons -->
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_etudiant_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <a href="{{ path('app_etudiant_edit', {'nce': etudiant.nce}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
            Delete
            </button>


            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete student</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this student ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    {{ include('etudiant/_delete_form.html.twig') }}
                </div>
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}
