{% extends 'base.html.twig' %}

{% block title %}Etudiant Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Etudiant</h1>

        <div class="text-right mb-3">
            <a href="{{ path('app_etudiant_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New
            </a>
        </div>

        <div class="table-responsive">
            <table id="etudiantTable" class="table table-striped table-bordered dataTable">
                <thead class="thead-light">
                    <tr>
                        <th>Nce</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for etudiant in etudiants %}
                    <tr>
                        <td>{{ etudiant.nce }}</td>
                        <td>{{ etudiant.nom }}</td>
                        <td>{{ etudiant.prenom }}</td>
                        <td>
                            <a href="{{ path('app_etudiant_show', {'nce': etudiant.nce}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_etudiant_edit', {'nce': etudiant.nce}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('app__soutenance_etudiant_show', {'nce': etudiant.nce}) }}" class="btn btn-success btn-sm">
                                <i class="fas fa-edit"></i> See soutenance
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
